    <div class="form"> <input class="form-control" type="text" id="birinciKenar" />   </div>
    <div class="form"> <input class="form-control" type="text" id="ikinciKenar" /> </div>

    <div class="form-row">
        <h3 id="Alan"></h3>
    </div>
    <div class="form-row">
        <button type="button" onclick="hesapla()" class="btn">HESAPLA</button>
    </div>
    <script>
        function hesapla() {
            var bk =
                document.getElementById("birinciKenar").value;
            var ik =
                document.getElementById("ikinciKenar").value;
            var bk1 = Number(bk);
            var ik1 = Number(ik);
            var alan = bk1 * ik1;
            document.getElementById("Alan").innerHTML = alan;




        }




    </script>



